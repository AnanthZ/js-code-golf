{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": false,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true
  },
  "ignorePatterns": ["**/*.min.js"],
  "rules": {
    "indent": [
      "error",
      2
    ]
  }
}